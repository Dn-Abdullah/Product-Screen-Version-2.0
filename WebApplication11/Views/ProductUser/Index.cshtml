@model IEnumerable<WebApplication11.Models.ProductModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container  ">
    <div class="row ">
        @foreach (var item in Model)
        {
            <div class="col-sm-3  ">
                <div class="row text-center fs-5 mt-4 me-5 fw-bold badge bg-Dark">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </div>
                <div class="row justify-content-center">
                    <a class="col-sm-10 "asp-controller="ProductUser"asp-action="Details"asp-route-id="@item.Id">
                        <img src="@Url.Content("~/Uploads/" +item.ProfilePicture)" alt="Error" class="img-fluid">
                    </a>
                </div>
                <hr>
                <div class=" p-3 ">
                <div>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </div>
                <div class=" text-primary ">
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-half"></i>
                </div>
                <div class="row justify-content-center display-7 m-7">
                    <strong>
                        $@Html.DisplayFor(modelItem => item.ProductPrice)
                    </strong>
                    
                </div>
                 </div>
            </div>
        }
    </div>
</div>



